<ViSideNav>
	<Brand>
		<!-- TODO: navbar-dark must be integrated -->
		<ViNavBrand Link="#"><ViNavBrandImage Source="./img/logo_bw.png" AltText="Vizor" /></ViNavBrand>
	</Brand>
	<Toggler>
		<ViNavToggler />
	</Toggler>
	<MenuItems>
		<ViNavDropdown ItemText="Input" Icon="@GetIcon(TablerSvgIcon.Forms)">
			<ViDropdownMenu>
				<ViDropdownItem Link="/doc/vizor/input/button">Button</ViDropdownItem>
				<ViDropdownItem Link="/doc/vizor/input/select">Select</ViDropdownItem>
				<ViDropdownItem Link="/doc/vizor/input/form">Form</ViDropdownItem>
			</ViDropdownMenu>
		</ViNavDropdown>
		<ViNavDropdown ItemText="Container" Icon="@GetIcon(TablerSvgIcon.Bucket)">
			<ViDropdownMenu>
				<ViDropdownItem Link="/doc/vizor/container/accordion">Accordion</ViDropdownItem>
				<ViDropdownItem Link="/doc/vizor/container/offcanvas">OffCanvas</ViDropdownItem>
				<ViDropdownItem Link="/doc/vizor/container/tab">Tab Control</ViDropdownItem>
			</ViDropdownMenu>
		</ViNavDropdown>
		<ViNavDropdown ItemText="Info" Icon="@GetIcon(TablerSvgIcon.Tooltip)">
			<ViDropdownMenu>
				<ViDropdownItem Link="/doc/vizor/info/alert">Alert</ViDropdownItem>
				<ViDropdownItem Link="/doc/vizor/info/badge">Badge</ViDropdownItem>
				<ViDropdownItem Link="/doc/vizor/info/card">Card</ViDropdownItem>
				<ViDropdownItem Link="/doc/vizor/info/code">Code</ViDropdownItem>
				<ViDropdownItem Link="/doc/vizor/info/documentation">Documentation</ViDropdownItem>
				<ViDropdownItem Link="/doc/vizor/info/error_code">Error Codes</ViDropdownItem>
				<ViDropdownItem Link="/doc/vizor/info/modal">Modal</ViDropdownItem>
				<ViDropdownItem Link="/doc/vizor/info/spinner">Spinner</ViDropdownItem>
				<ViDropdownItem Link="/doc/vizor/info/toast">Toast</ViDropdownItem>
				<ViDropdownItem Link="/doc/vizor/info/value_list">Value List</ViDropdownItem>
			</ViDropdownMenu>
		</ViNavDropdown>
		<ViNavDropdown ItemText="Layout" Icon="@GetIcon(TablerSvgIcon.Layout2)">
			<ViDropdownMenu>
				<ViDropdownItem Link="/doc/vizor/layout/page_header">Page Header</ViDropdownItem>
			</ViDropdownMenu>
		</ViNavDropdown>
		<ViNavLink Link="/doc/vizor/datagrid" Icon="@GetIcon(TablerSvgIcon.Table)">DataGrid</ViNavLink>
	</MenuItems>
</ViSideNav>

@code {
	private RenderFragment GetIcon(IconData icon)
	{
		return @<TablerSvgIcon Icon="@icon" />;
	}
}
