@namespace Vizor
@inherits ViComponentBase

@using System.Text;

<span class="form-help @CssClass" data-bs-toggle="popover" data-bs-placement="top" data-bs-html="true" data-bs-content="@content">?</span>

@code {

	private string content = string.Empty;

	[Parameter]
	public RenderFragment? ChildContent { get; set; }

	[Parameter]
	public string? Text { get; set; }

	protected override void OnParametersSet()
	{
		base.OnParametersSet();
	}

	protected override void OnInitialized()
	{
		content = RazorExtensions.GetCombinedContent(ChildContent, Text, "p");
	}
}
