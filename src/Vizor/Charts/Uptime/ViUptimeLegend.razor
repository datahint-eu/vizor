@namespace Vizor
@inherits ViComponentBase

<div class="@CssClass" @attributes="@AdditionalAttributes">
	<svg height="12" width="12" viewBox="0 0 12 12">
		<rect height="12" width="12" x="0" y="0" fill="@RgbColors.Green.ToHex()" rx="3" />
	</svg>
	<span class="me-2">@Ok</span>

	<svg height="12" width="12" viewBox="0 0 12 12">
		<rect height="12" width="12" x="0" y="0" fill="@RgbColors.Yellow.ToHex()" rx="3" />
	</svg>
	<span class="me-2">@Degraded</span>

	<svg height="12" width="12" viewBox="0 0 12 12">
		<rect height="12" width="12" x="0" y="0" fill="@RgbColors.Red.ToHex()" rx="3" />
	</svg>
	<span>@Error</span>
</div>

@code {

	[Parameter]
	public string Ok { get; set; } = "100% uptime";

	[Parameter]
	public string Degraded { get; set; } = "Partial degradation";

	[Parameter]
	public string Error { get; set; } = "Downtime";
}
