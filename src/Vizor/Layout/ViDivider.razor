@namespace Vizor
@inherits ViComponentBase

<div class="hr-text @ToTextAlign(TextAlign) @ColorConverter.ToTextColor(TextColor) @CssClass">@Text</div>

@code {

	// see https://preview.tabler.io/docs/divider.html

	[Parameter]
	public string? Text { get; set; }

	[Parameter]
	public Align TextAlign { get; set; } = Align.Center;

	[Parameter]
	public ThemeColor? TextColor { get; set; }

	public static string? ToTextAlign(Align align)
	{
		return align switch
		{
			Align.Left => "hr-text-left",
			Align.Right => "hr-text-right",
			_ => null
		};
	}
}
