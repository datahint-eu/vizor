@inherits ViComponentBase

<div class="ribbon @GetPlacement() @ColorConverter.ToBgColor(Color)">
	@ChildContent
	@Text
</div>

@code {

	[Parameter]
	public RenderFragment? ChildContent { get; set; }

	[Parameter]
	public string? Text { get; set; }

	[Parameter]
	public ThemeColor? Color { get; set; } = ThemeColor.Primary;

	[Parameter]
	public RibbonPlacement Placement { get; set; } = RibbonPlacement.Right;

	private string? GetPlacement()
	{
		return Placement switch
		{
			RibbonPlacement.Top => "ribbon-top",
			_ => null
		};
	}
}
