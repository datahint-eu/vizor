@namespace Vizor
@inherits ViComponentBase

<div class="card @CssClass">
	<div class="table-responsive">
		<CascadingValue IsFixed="true" Value="this" Name="ViPriceTable">
			<table class="table table-vcenter table-bordered table-nowrap card-table">
				<thead>
					<tr>
						<td class="w-50">
							@Info
						</td>
						<CascadingValue IsFixed="true" Value="true" Name="ShowInfo">
							<CascadingValue IsFixed="true" Value="true" Name="ShowSelect">
								@Plans
							</CascadingValue>
						</CascadingValue>
					</tr>
				</thead>
				<tbody>
					@Features
				</tbody>
				<tfoot>
					<tr>
						<td></td>
						<CascadingValue IsFixed="true" Value="true" Name="ShowSelect">
							@Plans
						</CascadingValue>
					</tr>
				</tfoot>
			</table>
		</CascadingValue>
	</div>
</div>

@code {

	[Parameter]
	public RenderFragment? Info { get; set; }

	[Parameter, EditorRequired]
	public RenderFragment Plans { get; set; } = default!;

	[Parameter, EditorRequired]
	public RenderFragment Features { get; set; } = default!;

	public int PlanCount { get; set; }
}
