@inherits ViComponentBase

<div class="alert alert-important @ColorConverter.ToAlertColor(Color) @CssClass" role="alert" @attributes="@AdditionalAttributes">
	@if (Icon != null)
	{
		<div class="d-flex">
			<div>
				@Icon
			</div>
			<div>
				@Content
				@Text
			</div>
		</div>
	}
	else
	{
		@Content
		@Text
	}
</div>

@code {

	// see https://getbootstrap.com/docs/5.2/components/alerts/
	// see https://preview.tabler.io/docs/alerts.html

	//TODO: alert-link, btn-close

	[Parameter]
	public RenderFragment? Content { get; set; }

	[Parameter]
	public RenderFragment? Icon { get; set; }

	[Parameter]
	public string? Text { get; set; }

	[Parameter]
	public RgbaColor? Color { get; set; }
}
