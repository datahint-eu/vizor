<div class="empty">
	<div class="empty-img">
		<div style="height: 128px;">
			@Image
		</div>
	</div>
	<p class="empty-title">@Title</p>
	<p class="empty-subtitle text-muted">
		@SubTitle
	</p>
</div>

@code {

	[Parameter]
	public RenderFragment? Image { get; set; }

	[Parameter]
	public string Title { get; set; } = "Temporarily down for maintenance";

	[Parameter]
	public string SubTitle { get; set; } = "Sorry for the inconvenience but we are performing some maintenance at the moment. We will be back online shortly!";

	protected override void OnInitialized()
	{
		if (Image == null)
		{
			Image = @<div style="height: 128px; width: 128px;"><svg xmlns="http://www.w3.org/2000/svg" width="100%" height="100%" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none" xmlns="http://www.w3.org/2000/svg"></path><path d="M12 9v2m0 4v.01" xmlns="http://www.w3.org/2000/svg"></path><path d="M5 19h14a2 2 0 0 0 1.84 -2.75l-7.1 -12.25a2 2 0 0 0 -3.5 0l-7.1 12.25a2 2 0 0 0 1.75 2.75" xmlns="http://www.w3.org/2000/svg"></path></svg></div>;
		}
	}
}
