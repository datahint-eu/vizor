@inherits ViComponentBase

<aside class="navbar navbar-vertical navbar-expand-lg navbar-dark">
	<div class="container-fluid">
		<CascadingValue IsFixed="true" Value="@id" Name="ViNavBarId">
			@Toggler
		</CascadingValue>
		@Brand

		<div class="collapse navbar-collapse" id="@id">
			<ul class="navbar-nav pt-lg-3">
				<CascadingValue IsFixed="true" Value="false" Name="ViAutoClose">
					@MenuItems
				</CascadingValue>
			</ul>
		</div>
	</div>
</aside>

@code {

	private string id = "sidebar-menu";

	[Parameter]
	public RenderFragment? Brand { get; set; }

	[Parameter]
	public RenderFragment? Toggler { get; set; }

	[Parameter, EditorRequired]
	public RenderFragment MenuItems { get; set; } = default!;
}
