@page "/doc/vizor/chart/uptime"

<ViPageHeader CategoryText="Informational" TitleText="Uptime Chart">
	<Buttons>
		<PageSourceOnGithub PageType="@this.GetType()" />
	</Buttons>
</ViPageHeader>
<ViPageBody>

	<ViCard>
		<Header><ViCardTitle>Uptime</ViCardTitle></Header>
		<Body>
			<ViUptimeChart Items="@itemsSome" />

			<ViUptimeChart CssClass="mt-4" Items="@itemsAll" />

			<ViUptimeLegend CssClass="mt-4"></ViUptimeLegend>
		</Body>
	</ViCard>
</ViPageBody>

@code {

	private List<UptimeType> itemsSome = new()
	{
		UptimeType.Ok, UptimeType.Ok, UptimeType.Ok, UptimeType.Ok, UptimeType.Ok,
		UptimeType.Degraded, UptimeType.Error,
		UptimeType.Ok, UptimeType.Ok, UptimeType.Ok, UptimeType.Ok, UptimeType.Ok,
		UptimeType.Ok, UptimeType.Ok, UptimeType.Ok, UptimeType.Ok, UptimeType.Ok
	};

	private List<UptimeType> itemsAll = new List<UptimeType>(Enumerable.Repeat(UptimeType.Ok, 90));
}
