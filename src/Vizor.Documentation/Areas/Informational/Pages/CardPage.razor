@page "/doc/vizor/info/card"
@using Vizor.Icons.Tabler

<ViPageHeader CategoryText="Informational" TitleText="Cards">
	<Buttons>
		<PageSourceOnGithub PageType="@this.GetType()" />
	</Buttons>
</ViPageHeader>
<ViPageBody>

	<ViCard>
		<Header><ViCardTitle>Title</ViCardTitle></Header>
		<Body>
			Simple card with header, body and footer.
		</Body>
		<Footer>
			Footer
		</Footer>
	</ViCard>

	<ViCard CssClass="mt-2" TransparentFooter="true">
		<Stamp>
			<ViCardStamp Color="@ThemeColor.Primary">
				<Icon>
					<TablerSvgIcon Icon="TablerSvgIcon.Ghost" />
				</Icon>
			</ViCardStamp>
		</Stamp>
		<Header><ViCardTitle>Title</ViCardTitle></Header>
		<Body>
			Card with header, body, footer, and stamp.
			The footer is transparent.
		</Body>
		<Footer>
			Footer
		</Footer>
	</ViCard>

	<ViCardRow CssClass="mt-2">
		<ViColumn Size="ColumnSize.Col_4">
			<ViMiniIconCard IconBackground="@ThemeColor.Green">
				<Icon><TablerSvgIcon Icon="TablerSvgIcon.ShoppingCart" /></Icon>
				<Title><b>3</b> items in cart</Title>
				<Message>Totalling <i>€ 55.13</i></Message>
			</ViMiniIconCard>
		</ViColumn>
		<ViColumn Size="ColumnSize.Col_4">
			<ViMiniIconCard IconBackground="@ThemeColor.Azure">
				<Icon><TablerSvgIcon Icon="TablerSvgIcon.BrandTwitter" /></Icon>
				<Title>Twitter</Title>
				<Message><b>155</b> followers</Message>
			</ViMiniIconCard>
		</ViColumn>
		<ViColumn Size="ColumnSize.Col_4">
			<ViCard>
				<Ribbon>
					<ViCardRibbon Color="@ThemeColor.Green">
						NEW
					</ViCardRibbon>
				</Ribbon>
				<Body>
					Card with ribbon.
				</Body>
			</ViCard>
		</ViColumn>
	</ViCardRow>

	<ViCardRow CssClass="mt-2" EqualHeight="true">
		<ViColumn Size="ColumnSize.Col_4">
			<ViCard Color="@ThemeColor.Lime">
				<Body>
					<ViCardTitle>Card with color.</ViCardTitle>
					<ViCardText>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Aperiam deleniti fugit incidunt, iste, itaque minima neque pariatur perferendis sed suscipit velit vitae voluptatem.</ViCardText>
				</Body>
			</ViCard>
		</ViColumn>
		<ViColumn Size="ColumnSize.Col_4">
			<ViCard Color="@ThemeColor.Lime" ColorStyle="@ColorStyle.Light">
				<Body>
					<ViCardTitle>Card with light color.</ViCardTitle>
					<ViCardText>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Aperiam deleniti fugit incidunt, iste, itaque minima neque pariatur perferendis sed suscipit velit vitae voluptatem.</ViCardText>
				</Body>
			</ViCard>
		</ViColumn>
		<ViColumn Size="ColumnSize.Col_4">
			<ViCard Color="@ThemeColor.Azure" ColorStyle="@ColorStyle.Light">
				<Stamp>
					<ViCardStamp Color="@ThemeColor.Primary">
						<Icon>
							<TablerSvgIcon Icon="TablerSvgIcon.Shield" />
						</Icon>
					</ViCardStamp>
				</Stamp>
				<Body>
					<ViCardTitle>Card with light color and stamp.</ViCardTitle>
					<ViCardText>Short text to demonstrate equal height.</ViCardText>
				</Body>
			</ViCard>
		</ViColumn>
	</ViCardRow>
</ViPageBody>

