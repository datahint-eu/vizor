@page "/doc/vizor/datagrid"
@using Vizor.Documentation.Areas.DataGrid.Models;

<ViPage>
	<ViPageHeader CategoryText="DataGrid">DataGrid</ViPageHeader>
	<ViPageBody>

		<ViDataGrid TItem="Car" DataSource="@cars" Title="Cars" UsePagination="false">
			<ViSimpleColumn TItem="Car" Name="Brand" ValueExpr="(item) => item.Brand" />
			<ViSimpleColumn TItem="Car" Name="Model" ValueExpr="(item) => item.Model" />
			<ViSimpleColumn TItem="Car" Name="Price" ValueExpr="(item) => item.Price" />
		</ViDataGrid>

		<ViDataGrid CssClass="mt-2" TItem="UserAccount" DataSource="@users" Title="Users" UsePagination="true">
			<ViSimpleColumn TItem="UserAccount" Name="Index" ValueExpr="(item) => item.Index" />
			<ViSimpleColumn TItem="UserAccount" Name="First Name" ValueExpr="(item) => item.FirstName" />
			<ViSimpleColumn TItem="UserAccount" Name="Last Name" ValueExpr="(item) => item.LastName" />
			<ViSimpleColumn TItem="UserAccount" Name="Email" ValueExpr="(item) => item.Email" />
			<ViSimpleColumn TItem="UserAccount" Name="Age" ValueExpr="(item) => item.Age" />
		</ViDataGrid>
	</ViPageBody>
</ViPage>



@code {

	private List<Car> cars = new List<Car>()
	{
		new Car{Brand="Skoda", Model="Enyaq", Price=60000 },
		new Car{Brand="VW", Model="ID.4", Price=55000 },
		new Car{Brand="VW", Model="ID.5", Price=65000 },
		new Car{Brand="Kia", Model="EV6", Price=62000 },
	};
	private UserAccountDataSource users = new UserAccountDataSource();

	struct Car
	{
		public string Brand { get; set; }

		public string Model { get; set; }

		public int Price { get; set; }
	}
}
