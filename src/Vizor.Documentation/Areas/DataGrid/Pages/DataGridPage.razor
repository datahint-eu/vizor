@page "/doc/vizor/datagrid"

<ViPage>
	<ViPageHeader>DataGrid</ViPageHeader>
	<ViPageBody>

		<ViDataGrid TItem="Car" DataSource="@cars" Title="Cars">
			<ViSimpleColumn TItem="Car" Name="Brand" ValueExpr="(item) => item.Brand" />
			<ViSimpleColumn TItem="Car" Name="Model" ValueExpr="(item) => item.Model" />
			<ViSimpleColumn TItem="Car" Name="Price" ValueExpr="(item) => item.Price" />
		</ViDataGrid>

	</ViPageBody>
</ViPage>



@code {

	private List<Car> cars = new List<Car>()
	{
		new Car{Brand="Skoda", Model="Enyaq", Price=60000 },
		new Car{Brand="VW", Model="ID.4", Price=55000 },
		new Car{Brand="VW", Model="ID.5", Price=65000 },
		new Car{Brand="Kia", Model="EV6", Price=62000 },
	};

	struct Car
	{
		public string Brand { get; set; }

		public string Model { get; set; }

		public int Price { get; set; }
	}
}
